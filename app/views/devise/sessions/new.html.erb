<h2>Welcome Back</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>


    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div><!--col-sm-->

  <div class="col-sm-3">
  </div>
  <div class="col-sm-5">
  </div>

    <div class="col-sm-2">
      <div class="actions" id="welcome-back-btn">
        <%= f.submit "Log in" %>
      </div>
    </div><!--col-sm-->

    <div class="col-sm-5">
    </div>
  </div><!--row-->
<% end %>


<div class="row">
<div class="col-sm-4">
</div>

  <div class="col-sm-4">
  <p>
  <%= render "devise/shared/links" %>
  </p>
  </div><!--col-sm-->

  <div class="col-sm-4">
  </div>
  </div><!--row-->
